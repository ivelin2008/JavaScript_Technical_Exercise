<button {{action "toggleSorting"}} class="btn">Sort By {{#if this.isSortedByRating}}Title{{else}}Rating{{/if}}</button>
{{#if this.isSortedByRating}}
    {{#each sortedMoviesByRating as |movie|}}
      {{movie-list/movie-list-item
        movie=movie
        update=update
        delete=delete
      }}
      <hr />
    {{/each}}
  {{else}}
    {{#each sortedMoviesByTitle as |movie|}}
      {{movie-list/movie-list-item
        movie=movie
        update=update
        delete=delete
      }}
      <hr />
    {{/each}}
{{/if}}
